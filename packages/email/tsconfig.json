{
  "extends": "@cio/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tsconfig.tsbuildinfo"],
  "references": [{ "path": "../utils" }],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
