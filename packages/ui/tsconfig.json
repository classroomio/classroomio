{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$src": ["./src"],
      "$src/*": ["./src/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": ["src", "src/**/*.svelte", "src/**/*.ts", "scripts/**/*.ts"]
}
