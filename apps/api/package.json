{
  "name": "@cio/api",
  "version": "0.0.1",
  "description": "ClassroomIO Backend for long processes",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "pnpm --filter @cio/api --parallel \"/^dev:.*/\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:tsc": "tsc -p tsconfig.json --watch",
    "deploy": "wrangler deploy",
    "start": "node dist/index.js",
    "test": "vitest NODE_ENV=test",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "upload:openapi": "tsx scripts/upload-openapi-spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/classroomio/classroomio.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/classroomio/classroomio/issues"
  },
  "homepage": "https://github.com/classroomio/classroomio#readme",
  "exports": {
    "./rpc-types": {
      "types": "./dist/rpc-types.d.ts",
      "default": "./dist/rpc-types.js"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.388.0",
    "@aws-sdk/s3-request-presigner": "^3.675.0",
    "@hono/node-server": "^1.8.2",
    "@hono/standard-validator": "^0.1.5",
    "@hono/zod-validator": "^0.7.2",
    "@scalar/hono-api-reference": "^0.9.18",
    "@sentry/node": "^7.110.1",
    "@sentry/profiling-node": "^7.110.1",
    "@supabase/supabase-js": "^2.32.0",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "hono": "^4.9.7",
    "hono-openapi": "^1.0.8",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.7.0",
    "katex": "^0.16.10",
    "marked": "^7.0.3",
    "nanoid": "^5.1.5",
    "nodemailer": "^6.9.5",
    "zeptomail": "^6.0.0",
    "zod": "^4.1.8",
    "zod-openapi": "^5.4.1"
  },
  "devDependencies": {
    "@types/katex": "^0.16.7",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^9.31.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.5.2",
    "vitest": "^1.2.2",
    "wrangler": "4.21.x"
  },
  "_moduleAliases": {
    "$src": "src"
  }
}
