{
  "name": "classroomio",
  "version": "0.1.13",
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo prepare --concurrency 13 && turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:pnpm": "pnpm clean && pnpm store prune",
    "format": "turbo run format",
    "format:check": "prettier --check --ignore-unknown $(git diff --name-only --diff-filter=d HEAD~1)",
    "postinstall": "lefthook install",
    "release": "standard-version",
    "db:reset": "pnpm --filter @cio/db db:reset",
    "dashboard:dev": "pnpm dev --filter=@cio/dashboard --filter=@cio/ui  --filter=@cio/db --filter=@cio/utils",
    "api:dev": "pnpm dev --filter=@cio/api --filter=@cio/email  --filter=@cio/db --filter=@cio/utils",
    "website:dev": "pnpm dev --filter=@cio/website",
    "storybook:dev": "pnpm dev --filter=@cio/storybook --filter=@cio/ui"
  },
  "license": "MIT",
  "dependencies": {
    "turbo": "^1.10.16"
  },
  "devDependencies": {
    "@cio/tsconfig": "workspace:*",
    "@evilmartians/lefthook": "^1.13.6",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "^20.19.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@tailwindcss/oxide"
    ]
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
